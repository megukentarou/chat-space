.side-chat
  .side-header
    .side-header__user--info
      .info__user--name
        = current_user.name
      %ul.info__user--icon
        = link_to new_group_path do
          %li.list
            = link_to new_group_path(current_user) do
              = icon('fas', 'edit', class: 'fa.fa-edit')
          %li.list__cog
            = link_to edit_user_path(current_user) do
              = icon('fas', 'cog', class: 'fa.fa-cog')
  .side-bar__group--list
    - current_user.groups.each do |group|
      .group
        = link_to group_messages_path(group) do
          .group__name
            = group.name
          .group__message
            = group.show_last_message